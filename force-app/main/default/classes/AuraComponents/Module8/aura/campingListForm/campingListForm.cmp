<aura:component>
    <aura:attribute name = "newItem" type="Camping_Item__c"/>
    <aura:registerEvent name = "addItem" type = "c:addItemEvent"/>

    <form class = "slds-form--stacked">
        <lightning:input value = "{!v.newItem.Name}" aura:id = "Name"/>
        <lightning:input type = "number" value = "{!v.newItem.Quantity__c}" aura:id = "Quantity" min = "1"/>
        <lightning:input type = "checkbox" checked="{!v.newItem.Packed__c}" value="{!v.newItem.Packed__c}" aura:id = "Packed"/>
        <lightning:input type = "number" value = "{!v.newItem.Price__c}" aura:id = "Price" formatter = "currency"/>
        <lightning:button variant = "Neutral" label = "NewCamping" aura:id = "submitButton" onclick = "{!c.clickCreateItem}"/>
    </form>
</aura:component>	
